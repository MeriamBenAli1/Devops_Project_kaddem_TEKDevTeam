pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                echo 'Pulling..!'
                git branch: 'nouvelle_branche',
                credentialsId: 'github-credentials',
                url: 'https://github.com/MeriamBenAli1/Devops_Project_kaddem_TEKDevTeam.git'
            }
        }
         stage('Maven clean') {
            steps {
                echo 'Building the project...'
                sh 'mvn clean package';
            }
        }
        stage('MVN Test') {
            steps {
                echo 'Running tests...'
                sh 'mvn test';
            }
        }
       stage('MVN SonarQube') {
           steps {
               sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=Amineakr.012a
           }
        }
    }

}
